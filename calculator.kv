<mylayout>:
	rows: 7
	BoxLayout:
		padding: 5
		TextInput:
			id: egg
			#font_size:35
			font_size: self.height * 0.6
			text_size: self.width, None
			multiline: False
	BoxLayout:
		spacing: 10
		padding: 5
		Button:
			text: '1'
			on_press: egg.text += '1'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '2'
			on_press: egg.text += '2'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:	
			text: '3'
			on_press: egg.text += '3'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button: 
			text: '+'
			on_press: egg.text += '+'
			background_color: (1.0, 1.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
	BoxLayout:
		spacing: 10
		padding: 5
		Button:
			text: '4'
			on_press: egg.text += '4'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5	
		Button:
			text: '5'
			on_press: egg.text += '5'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '6'
			on_press: egg.text += '6'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '-'
			on_press: egg.text += '-'
			background_color: (1.0, 1.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
	BoxLayout:
		spacing: 10
		padding: 5
		Button:
			text: '7'
			on_press: egg.text += '7'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '8'
			on_press: egg.text += '8'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '9'
			on_press: egg.text += '9'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '*'
			on_press: egg.text += '*'
			background_color: (1.0, 1.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
	BoxLayout:
		spacing: 10
		padding: 5
		Button:
			text: '0'
			on_press: egg.text += '0'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button: 
			text: '.'
			on_press: egg.text += '.'
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
		Button:
			text: '/'
			on_press: egg.text += '/'
			background_color: (1.0, 1.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5
	BoxLayout:
		spacing: 10
		padding: 5		
		Button: 
			#text: 'Backspace'
			on_press: root.backspace()
			background_color: (1.0, 0.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.35
			Image:
				allow_stretch: True
				keep_ratio: True
				width: self.parent.width/10
				center: self.parent.center
				source: 'backspace.png'
		Button: 
			text: 'Clear'
			on_press: egg.text = ""
			background_color: (1.0, 0.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.35


	BoxLayout:
		spacing: 10
		padding: 5
		Button:
			text: '='
			on_press: root.lemon()
			background_color: (1.0, 1.0, 0.0, 1.0)
			halign: 'center'
			valign: 'middle'
			text_size: self.width, None
			font_size: self.height * 0.5

